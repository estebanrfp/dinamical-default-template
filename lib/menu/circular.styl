.menu-opener
    display none
        
    &:checked ~ .link-one
        top -65px
        right 2px
        opacity 1
    &:checked ~ .link-two 
        right 55px
        top -50px
        opacity 1
    &:checked ~ .link-three 
        top 2px
        right 70px
        opacity 1
        z-index 2

.circularmenu
    position absolute
    right 1rem
    bottom 60px
    i
        padding 0 7px
        text-align center
        font-size 1.5rem
        color #fff
        font-weight bold

.linked
    width 40px
    height 40px
    display block
    border-radius 50%
    position absolute
    top 0
    right 0
    background rgba(0, 0, 0, 0.14)
    opacity 0
    transition all 0.3s ease
    &:hover
        background #3498DB