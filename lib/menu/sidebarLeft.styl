@import './switch.styl'

.menu-left
    height 100%
    overflow hidden
    overflow-y scroll
    -webkit-overflow-scrolling touch
    padding-bottom 5em
    // margin 0 .5rem
    
.show-nav-left
    .main-container
        transform translateX(280px)
        transform translate3d(280px, 0, 0) 
    .main-container > .Layout
        transition all 0.3s ease
        width calc(100% - 280px)    

.Sidebar-left
    position absolute
    width 280px
    height 100%
    // padding 0 .5em
    left -280px
    background-color #242E38
    z-index 1

img.alineadoTextoImagenCentro
    vertical-align middle
    margin: 0 .5em

.mainlogo
    padding 1rem
    height 60px
    border-bottom 1px solid rgba(69, 85, 102, 0.41)

.area-top
    // transition: all 0.3s ease;
    position fixed
    background #CFD8DC
    color rgba(0,0,0,0.4)
    width 100% 
    height 25px
    clear none
    top 0
    left 0
    
.userImage
    position absolute
    // background: url("data:image/png;base64, ") no-repeat center center;
    // background-size: 64px 64px;
    height 40px
    width 40px
    top 10px
    right 1rem
    padding 1px
    background #A4BDCD
    border-radius 50%
    opacity .8
    &:hover
        opacity 1
    
.option-popup {
    position: absolute;
    -webkit-transform: translateZ(0);
    width: 100%;
    height: 303px;
    bottom: 0;
    left: 0;
    z-index: 100;
    transition: bottom 300ms cubic-bezier(.02,.01,.47,1);
}

.option-popup.closed {
    bottom: -255px;
}

.option-popup .option-header {
    cursor: pointer;
    height: 50px;
    background-color: #202A33;
    color: rgb(160, 159, 158);
    padding: 15px 14px;
    font-size: 15px;
    font-weight: bold;
}

