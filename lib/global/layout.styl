.app-container
    width 100%
    height 100%
    overflow hidden

    .toggle-nav-right
        position absolute
        margin-right 1rem
        right 0
        // padding 1rem
    .toggle-nav-left
        margin 0 2rem 0 1.2rem
        
        // padding 1rem     
        // width 100%
        // border-bottom 1px solid #E0E0E0
        // background #EDEDED

.main-container
    width 100%
    height 100%
    position fixed
    transform translateX(0)
    transform translate3d(0, 0, 0)
    transition 0.3s ease all
                
.Layout
    transform scale(1)
    position absolute
    width 100%
    min-width 300px
    height 100%
    overflow hidden
    top 0
    opacity 1
    // transition 0.3s ease all
    background-color #ededed
    // background-color blue      

.transition
    // -webkit-transform translateX(50px)
    // -webkit-transform translateZ(-50px) rotateX(95deg)
    opacity .5
    
.opacity
    -webkit-filter brightness(.8)
    -moz-filter brightness(.8)
    filter brightness(.8)

.show-nav-top
    .main-container
        transform translateY(-40px)
        transform translate3d(0, 40px, 0)
    .main-container > .page_navigation
            top calc(100% - 88px)

.Sidebar-top
    position absolute
    width 100%
    height 40px
    padding .5em
    top -40px
    text-align center
    color #62A1C2
    border-bottom 1px solid #e0e0e0

