.video-container
    float right
    width 50%
    height auto
    max-width 640px
    margin 1rem 0 1rem 1rem

.video-container iframe, .video-container object, .video-container embed
    width 100%
    max-width 640px
    height 240px

@media screen and (max-width: 480px)
    .video-container
        width 100%

    .video-container iframe, .video-container object, .video-container embed
        width 100%
        height 240px
        margin-bottom 1em
        