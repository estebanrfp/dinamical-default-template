.header-menu
    position absolute
    padding 1rem 0
    width 100% 
    height 60px
    border-bottom 1px solid #e0e0e0
    background rgba(237, 237, 237, 0.95) // #ededed
    z-index 1000
    // transition all 1s ease
.header-show 
    transform translateY(0%)
    transition all 500ms cubic-bezier(0.450, 1.000, 0.220, 1.000) /* easeOutExpo */
.header-hide 
    transform translateY(-100%)
    transition all 300ms cubic-bezier(0.550, 0.055, 0.675, 0.190) /* easeInCubic */
.header-rotate
    transform translateY(60px)
    transition all 500ms cubic-bezier(0.450, 1.000, 0.220, 1.000) /* easeOutExpo */
    
