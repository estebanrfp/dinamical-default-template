.relatedPosts {
    // display: inline-block;
    overflow-x: scroll;
    width: 100% !important;
    /* height: 300px !important; */
    white-space: nowrap;
    padding-right: 2px;
    background: #d6dadf;
}
.Item-title {
    white-space: normal;
}

.relatedPosts .Item {
    width: 48%;
    // margin-left: 0;
    // margin-right: 1rem;
}
// .relatedPosts::-webkit-scrollbar { width: 0 !important }
.relatedPosts::-webkit-scrollbar 
    display none


@media (min-width: 400px) {
  .relatedPosts .Item{
    width: 100%;
  }
}
@media (min-width: 600px) {
  .relatedPosts .Item{
    width: 48%;
  }
}
@media (min-width: 800px) {
  .relatedPosts .Item{
    width: 32%;
  }
}
@media (min-width: 1200px) {
  .relatedPosts .Item{
    width: 24%;
  }
}
