.cart-nav
    font-size 1rem
    min-width 320px
    ul 
        margin 1rem
        display flex
        justify-content: space-between
        text-align center
        color gray
        position relative
        overflow hidden
.step
    padding 0 6px
    border-radius 50%
    background #fff
    border 5px solid #f5f5f5   
    &:after
        content ''
        width 200px
        height 3px
        background #f5f5f5 //linea
        position absolute
        bottom 45%
        z-index -1    
.step2 
.step4
    color #83B0CE
    
.step2

.fill
    background #83B0CE
    color #fff
.ready
    background #dcd8d8

.user-ready
    padding 1rem
    background #f5f5f5
    min-width 320px
    height 240px
    text-align center
    padding 6rem

.previousButton, .nextButton, #nextButton
    position relative

.cart-content
    height 202px
    background #FFFFFF  

#cart-container
    height 164px
    overflow-y scroll
    overflow-x hidden 

#cart-area
    text-align left
    margin 0
    padding .5em
    color #83B0CE
    .remove-item
        color gray
        &:hover
            color #6dcff6
    .checkout
        color gray
        &:hover 
            color #6dcff6
     
    clear both
    padding 0
    list-style-type none
#cart-area .cart-item a
    color gray
    text-decoration none
    
.cart-item
    display flex
    justify-content space-between
    align-items flex-start

    padding 1rem 0
    border-bottom 1px solid rgba(225, 225, 225, 0.2)
    margin-bottom .2em
    margin 0 1rem   

#cart-area 
    .cart-attributes li
        display inline
.cart-name
    position absolute
    width 100%
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

#cart-area .cart-details-name 
    width 80%  
    vertical-align middle 
    position relative
    .zmdi
        float left
        color #9BD09B
#cart-area 
    .cart-remove
        width 1rem
        height 1rem
        padding-bottom .1rem
        color gray
        cursor pointer
        border-radius 50%
        background-color #fff
        border 0
        vertical-align middle 
        margin-bottom 5px
#cart-area 
    .cart-details-price
        width 15%
        color #83b0ce
        text-align right
        &::after
            content " €"
.cart-subtotal
    text-align right
    border-top 1px solid #f8f8f8
    border-bottom 1px solid #f8f8f8
    padding .5rem 1rem
    color #83b0ce
    // &::before
    //     content "Total: "
    &::after
        content " €"

.user-profile
    height 240px
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content center
    align-content stretch
    align-items center
    border-bottom 1px solid #f8f8f8

.profile-content
    padding .5rem 1rem
    // border-right 1px solid #83B0CE
    img 
        display inline-block
        border-radius 50%
        background #EEEEEE
        padding 2px
        width 40px
        margin 0 1rem 0 0
        vertical-align middle
    .details 
        color #83b0ce
        display inline-block
        vertical-align middle
        padding 0 0 0 1rem
        border-left 1px solid #b6d1e2
    
